<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diabetesretinopathy">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NoPreviousActivity"></activity>
        <activity android:name=".AnalyseImagesActivity" />
        <activity android:name=".LeftEyeTakePhotoActivity" />
        <activity android:name=".RightEyeTakePhotoActivity" />
        <activity android:name=".LeftEyeUploadActivity" />
        <activity android:name=".RightEyeUploadActivity" />
        <activity android:name=".CompareImagesActivity" />
        <activity android:name=".HistoryDetailsActivity" />
        <activity android:name=".UploadPhotoActivity" />
        <activity android:name=".TakePhotoActivity" />
        <activity android:name=".TurnOnCameraActivity" />
        <activity android:name=".ChangePasswordActivity" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".HistoryActivity" />
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>