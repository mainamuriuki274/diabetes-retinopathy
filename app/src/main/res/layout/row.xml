<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        android:elevation="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:thicknessRatio="1.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="75dp">

                <ImageView
                    android:id="@+id/left_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eye"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Analysis"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/left_prediction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No DR, 0.39%" />

                <TextView
                    android:id="@+id/left_prediction_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prediciton: No Diabetes Retinopathy"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comparison Analysis"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/comparison_left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Worsened from last scan taken on 10/11/2020" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Scan"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_of_scan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="12/12/2020" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="15dp"
        android:elevation="20dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:thicknessRatio="1.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardCornerRadius="75dp">

                <ImageView
                    android:id="@+id/right_image"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    tools:srcCompat="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eye"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/eye2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Right" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Scan Analysis"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/right_prediction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No DR, 0.39%" />

                <TextView
                    android:id="@+id/right_prediction_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prediciton: No DR, 0.39%"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comparison Analysis"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/comparison_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Worsened from last scan taken on 10/11/2020" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date of Scan"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/date_of_scan2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="12/12/2020" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>

